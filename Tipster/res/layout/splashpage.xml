<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/enterBill"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/billAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:ems="50"
        android:inputType="number|numberSigned|numberDecimal"
        android:textColor="@color/white"
        android:textSize="40dp">
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/billAmount"
        android:layout_alignRight="@+id/billAmount"
        android:layout_below="@+id/billAmount"
        android:layout_marginTop="42dp"
        android:onClick="saveBillAmount"
        android:text="@string/save"
        android:background="@color/buttongray" />

    <TextView
        android:id="@+id/carryOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="72dp"
        android:text="@string/carryOn"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignLeft="@+id/carryOn"
        android:layout_below="@+id/carryOn"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        android:visibility="invisible" />

</RelativeLayout>
    