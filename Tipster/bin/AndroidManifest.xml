<manifest package="com.apps.tipster"
    android:versionCode="6"
    android:versionName="1.5" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />
    <application android:icon="@drawable/tipster_launcher" 
        android:label="@string/app_name" 
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar"
        android:name="Tipster">
        <activity android:name="ClassicMode" android:screenOrientation="portrait">
            
        </activity>
        <activity android:name="DisplayTotals" android:screenOrientation="portrait"></activity>
        <activity android:name="SplashPage" android:label="@string/title_activity_main" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="QuickMode" android:screenOrientation="portrait"></activity>
        <activity android:name="LuckyMode" android:screenOrientation="portrait"></activity>
        <activity android:name="ManualMode" android:screenOrientation="portrait"></activity>
        <activity android:name="Locate" android:screenOrientation="portrait"></activity>
        <activity android:name="FacebookPost" android:screenOrientation="portrait"></activity>
    </application>
    
        <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
 
    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Access Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>